<main class="auth">
  <a href="/">
    <%= image_tag "tally-tool.svg", class: "auth__logo" %>
  </a>
  <h1 class="auth__title">welcome back to <span>tally tool!</span></h1>  

  <%= form_with url: "/login" do |form| %>
    <div class="container">
      <%= form.label :email, "email" %>
      <%= form.email_field :email %>

      <% if @error %>
        <div class="errors">
          <p class="error-text"><%= @error %></p>
        </div>
      <% end %>
    </div>

    <div class="container">
      <%= form.submit "login" %>
    </div>
  <% end %>
</main>

<style>
  .auth {
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 1rem;
  }

  .auth__logo {
    width: 10rem;
  }

  .auth__title span {
    color: var(--black);
  }
</style>
